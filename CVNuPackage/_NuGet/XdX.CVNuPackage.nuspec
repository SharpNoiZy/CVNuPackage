    <files>
        <file src="..\bin\Release\CVNuPackage.exe" target="content\_NuGet\CVNuPackage.exe" />
        <file src="..\bin\Release\nuget.exe" target="content\_NuGet\nuget.exe" />
        <file src="..\readme.txt" target="content\_NuGet\readme.txt" />
    </files>
</package>